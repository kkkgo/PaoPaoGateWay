#!/bin/sh
if ! grep -q -r eth06 /etc/config/network; then
    killall odhcpd
    sysctl -w net.ipv6.conf.all.disable_ipv6=1
    sysctl -w net.ipv6.conf.default.disable_ipv6=1
    rm -rf /etc/odhcp6c.user
    rm -rf /etc/odhcp6c.user.d
    rm -rf /lib/netifd/proto/dhcpv6.sh
    rm -rf /lib/netifd/dhcpv6.script
    rm -rf /lib/upgrade/keep.d/odhcp6c
    rm -rf /usr/sbin/odhcp6c
    rm -rf /usr/sbin/odhcpd
fi
/usr/bin/ppg.sh &
exit 0